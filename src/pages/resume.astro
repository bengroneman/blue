---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.svelte';
import ContentWrapper from '../components/ContentWrapper.svelte';
---
<Layout title="Resume | Blue Engineering">
    <Header title="Check out my Resume" short_title="Blue Engineering" />
    <ContentWrapper>
        <h1>Fill out the form below for a copy of my resume</h1>
        <h2>Or you can check Linkedin if that is your preference</h2>
        <div class="rounded-md border border-gray-300 px-3 py-2 shadow-sm focus-within:border-indigo-600 focus-within:ring-1 focus-within:ring-indigo-600 py-12">
          <form name="resumeForm" data-netlify="true" method="POST" class="grid grid-cols-2">
            <div class="form-field">
                <label for="name" class="block text-xs font-medium text-gray-900">Email</label>
                <input
                    type="email"
                    name="emailaddress"
                    autocomplete="email"
                    id="name"
                    class="block w-full border-0 p-0 text-gray-900 placeholder-gray-500 focus:ring-0 sm:text-sm" placeholder="email@example.com"
                >
            </div>
            <div class="form-field flex justify-end">
                <button type="submit" class="inline-block align-baseline items-center rounded border border-transparent bg-indigo-600 px-2.5 py-1.5 text-xs font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Submit</button>
            </div>
        </form>
        </div>
    </ContentWrapper>
</Layout>